<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exercise_3d_content"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" >
	    
	        <TextView
	            android:id="@+id/exercise_3d_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/normal_margin"
	            android:layout_marginLeft="@dimen/normal_margin"
	            android:layout_marginRight="@dimen/normal_margin"
	            android:layout_marginTop="@dimen/normal_margin"
	            android:text="Abduction"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <TextView
	            android:id="@+id/exercise_3d_description"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/normal_margin"
	            android:text="This is a demostration of the 3D model. As up to this point we aren't getting real data input, the model uses fake data as input, which has been looped in order to show the behaviour." />

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_margin="@dimen/double_margin"
	            android:orientation="horizontal"
	            android:baselineAligned="false" >
				
	            <LinearLayout 
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:layout_weight="4" >
		            
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/e3d_tips"
		                android:textAppearance="?android:attr/textAppearanceMedium" />
		            <TextView 
		                android:id="@+id/exercise_3d_tip"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Tips and notes about the exercise." />
				</LinearLayout>
				
	            <LinearLayout
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:layout_weight="1" >
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/e3d_reps"
		                android:textAppearance="?android:attr/textAppearanceMedium" />

		            <LinearLayout
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content" >

		                <TextView
		                    android:id="@+id/exercise_3d_counter"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="*"
		                    android:textSize="@dimen/counter" />
		                
		                <TextView
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="@string/e3d_sep"
		                    android:textSize="@dimen/counter" />
		                
		                <TextView
		                    android:id="@+id/exercise_3d_max"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:text="*"
		                    android:textSize="@dimen/counter" />

		            </LinearLayout>

				</LinearLayout>
	        </LinearLayout>
	
</LinearLayout>
