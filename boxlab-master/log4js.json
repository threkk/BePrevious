{
  "appenders": [
    { 
      "type": "console" 
    },
    {
        "type": "file",
        "filename": "./logs/default.log",
        "maxLogSize": 20480,
        "backups": 1,
        "category": "default"
    },
    {
        "type": "file",
        "filename": "./logs/server.log",
        "maxLogSize": 20480,
        "backups": 1,
        "category": "server"
    },
    {
        "type": "file",
        "filename": "./logs/api.log",
        "maxLogSize": 20480,
        "backups": 1,
        "category": "api"
    }
  ],
  "levels": {
    "default": "DEBUG",
    "server": "DEBUG",
    "api": "DEBUG"
  },
  "replaceConsole": true
}